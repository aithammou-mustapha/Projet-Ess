{% extends "base.html.twig" %}

{% block title %}Ajouter un Manager{% endblock %}

{% block stylesheets %}
    <style>

    /* Conteneur principal */
    .container-ajout {
        width: 65%;
        margin: auto;
        padding: 50px;
        background-color: rgba(255, 176, 154, 0.5); 
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

    /* Titre */
    .header-ajout {
        color: #d9534f;
        font-size: 40px;
        font-weight: bold;
        text-transform: uppercase;
        text-align: center;
        margin-bottom: 25px;
    }

    /* Avatar */
    .avatar-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 30px;
        position: relative;
    }

    .avatar-img {
        width: 110px;
        height: 110px;
        border-radius: 50%;
        border: 3px solid white;
        cursor: pointer;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3);
    }

    .hidden-file-input {
        position: absolute;
        width: 110px;
        height: 110px;
        opacity: 0;
        cursor: pointer;
    }

    /* Champs de formulaire */
    .form-group-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 55px;
        align-items: center;
    }

    .form-group {
        flex: 1;
        margin: 0 15px;
        display: flex;
        align-items: center;
    }

    .form-group label {
        width: 35%;
        font-weight: bold;
        color: #333;
        text-transform: uppercase;
        margin-right: 10px;
        text-align: right;
    }

    .form-group input,
    .form-group select {
        width: 100%;
        padding: 14px;
        border: none;
        background-color: white;
        font-size: 16px;
    }

    .form-group-centres {
    display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 20px;
        margin-left: 50px;
    }

    .form-group-centres label {
        font-weight: bold;
        color: #333;
        text-transform: uppercase;
        margin-right: 15px;
    }

    .form-group-centres select {
        width: 70%;
        padding: 14px;
        border: none;
        background-color: white;
        font-size: 14px;
    }

    /* Boutons */
    .button-container {
        display: flex;
        justify-content: center;
        gap: 25px;
        margin-top: 30px;
    }

    .button {
        background-color: #ff5b5b;
        color: white;
        padding: 10px 25px;
        text-decoration: none;
        font-size: 20px;
        cursor: pointer;
        border: none;
        border-radius: 20px;
        text-transform: uppercase;
        font-family: "Anton", serif;
    }

    .button:hover {
        opacity: 0.9;
    }

    .btn-fermer {
        background-color: #ff5b5b;
        text-decoration: none;
        padding: 10px 25px;

    }


    .btn-fermer:hover {
        background-color: #c9302c;
    }


	</style>
{% endblock %}

{% block body %}
    <div class="content">
        <main>
            <h1 class="header-ajout">Ajouter un Manager</h1>

            <section class="container-ajout">
                <div class="form-container">
                    {{ form_start(gerantForm, {'attr': {'enctype': 'multipart/form-data'}}) }}
                    
                   <!-- Section Avatar -->
                    <div class="avatar-section">
                        <label for="avatar-upload">
                            <img src="{{ gerantForm.vars.value.avatarGerant ? asset('uploads/' ~ gerantForm.vars.value.avatarGerant) : asset('assets/img/profil.png') }}"
                            alt="Avatar" 
                            class="avatar-img" 
                            id="avatarPreview">
                        </label>
                        {{ form_widget(gerantForm.avatarGerant, { 'attr': {'class': 'hidden-file-input', 'id': 'avatar-upload', 'accept': 'image/*'} }) }}
                    </div>



                    <div class="form-group-row">
                        <div class="form-group">
                            <label>{{ form_label(gerantForm.prenomGerant) }}</label>
                            {{ form_widget(gerantForm.prenomGerant) }}
                        </div>
                        <div class="form-group">
                            <label>{{ form_label(gerantForm.nomGerant) }}</label>
                            {{ form_widget(gerantForm.nomGerant) }}
                        </div>
                    </div>

                    <div class="form-group-row">
                        <div class="form-group">
                            <label>{{ form_label(gerantForm.emailGerant) }}</label>
                            {{ form_widget(gerantForm.emailGerant) }}
                        </div>
                        <div class="form-group">
                            <label>{{ form_label(gerantForm.telGerant) }}</label>
                            {{ form_widget(gerantForm.telGerant) }}
                        </div>
                    </div>

                    <div class="form-group-row">
                        <div class="form-group">
                            <label>{{ form_label(gerantForm.roles) }}</label>
                            {{ form_widget(gerantForm.roles) }}
                        </div>
                        <div class="form-group">
                            <label>{{ form_label(gerantForm.password) }}</label>
                            {{ form_widget(gerantForm.password) }}
                        </div>
                    </div>

                    <div class="form-group-row">
                        <div class="form-group">
                            <label>{{ form_label(gerantForm.centres) }}</label>
                            {{ form_widget(gerantForm.centres) }}
                        </div>
                        <div class="form-group">
                            
                        </div>
                    </div>

                    <div class="button-container">
                        <a href="{{ path('admin_gerant_index') }}" class="button btn-fermer">Fermer</a>
                        <button type="submit" class="button btn-ajouter">Ajouter</button>
                    </div>
                    
                    {{ form_end(gerantForm) }}
                </div>
            </section>
        </main>
    </div>
{% endblock %}
