{% extends "base.html.twig" %}

{% block title %}Modifier une Salle{% endblock %}

{% block stylesheets %}
<style>

/* Conteneur principal */
.container-ajout {
    width: 65%;
    height: 400px;
    margin: auto;
    padding: 50px;
    background-color: rgba(255, 176, 154, 0.5);
    border-radius: 15px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center; /* Centre verticalement */
    align-items: center; /* Centre horizontalement */
}

/* Centrer la form-container */
.form-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

/* Titre */
.header-ajout {
    color: #d9534f;
    font-size: 40px;
    font-weight: bold;
    text-transform: uppercase;
    text-align: center;
    margin-bottom: 25px;
}

/* Champs de formulaire */
.form-group-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 55px;
    align-items: center;
}

.form-group {
    flex: 1;
    margin: 0 15px;
    display: flex;
    align-items: center;
}

.form-group label {
    width: 35%;
    font-weight: bold;
    color: #333;
    text-transform: uppercase;
    margin-right: 10px;
    text-align: right;
}

.form-group input,
.form-group select {
    width: 300px;
    padding: 14px;
    border: none;
    background-color: white;
    font-size: 16px;
}

/* Boutons */
.button-container {
    display: flex;
    justify-content: center;
    gap: 25px;
    margin-top: 30px;
}

.button {
    background-color: #ff5b5b;
    color: white;
    padding: 10px 25px;
    text-decoration: none;
    font-size: 20px;
    cursor: pointer;
    border: none;
    border-radius: 20px;
    text-transform: uppercase;
    font-family: "Anton", serif;
}

.button:hover {
    opacity: 0.9;
}

.btn-fermer {
    background-color: #ff5b5b;
    text-decoration: none;
    padding: 10px 25px;
}

.btn-fermer:hover {
    background-color: #c9302c;
}

</style>
{% endblock %}

{% block body %}
    <div class="content">
        <main>
            <h1 class="header-ajout">Modifier une Salle</h1>

            <section class="container-ajout">
                <div class="form-container">
                    {{ form_start(salleForm) }}

                    <div class="form-group-row">
                        <div class="form-group">
                            <label>{{ form_label(salleForm.numSalle) }}</label>
                            {{ form_widget(salleForm.numSalle) }}
                        </div>
                        <div class="form-group">
                            <label>{{ form_label(salleForm.capaciteSalle) }}</label>
                            {{ form_widget(salleForm.capaciteSalle) }}
                        </div>
                    </div>

                    <div class="form-group-row">
                        <div class="form-group">
                            <label>{{ form_label(salleForm.disponibilitesSalle) }}</label>
                            {{ form_widget(salleForm.disponibilitesSalle) }}
                        </div>
                        <div class="form-group">
                            <!-- Champ vide pour garder l'alignement -->
                        </div>
                    </div>

                    <div class="button-container">
                        <a href="{{ path('admin_salle_index') }}" class="button btn-fermer">Fermer</a>
                        <button type="submit" class="button btn-modifier">Modifier</button>
                    </div>

                    {{ form_end(salleForm) }}
                </div>
            </section>
        </main>
    </div>
{% endblock %}
