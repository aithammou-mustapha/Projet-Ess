{% extends "base.html.twig" %}

{% block title %}Ajouter un Groupe{% endblock %}

{% block stylesheets %}
    <style>
        /* Conteneur principal */
        .container-ajout {
            width: 65%;
            margin: auto;
            padding: 50px;
            background-color: rgba(255, 176, 154, 0.5);
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        /* Titre */
        .header-ajout {
            color: #d9534f;
            font-size: 40px;
            font-weight: bold;
            text-transform: uppercase;
            text-align: center;
            margin-bottom: 25px;
        }

        /* Avatar */
        .avatar-section {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 30px;
            position: relative;
        }

        .avatar-img {
            width: 110px;
            height: 110px;
            border-radius: 50%;
            border: 3px solid white;
            cursor: pointer;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3);
        }

        .hidden-file-input {
            position: absolute;
            width: 110px;
            height: 110px;
            opacity: 0;
            cursor: pointer;
        }

        /* Champs de formulaire */
        .form-group-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 55px;
            align-items: center;
        }

        .form-group {
            flex: 1;
            margin: 0 15px;
            display: flex;
            align-items: center;
        }

        .form-group label {
            width: 35%;
            font-weight: bold;
            color: #333;
            text-transform: uppercase;
            margin-right: 10px;
            text-align: right;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 14px;
            border: none;
            background-color: white;
            font-size: 16px;
        }

        /* Boutons */
        .button-container {
            display: flex;
            justify-content: center;
            gap: 25px;
            margin-top: 30px;
        }

        .button {
            background-color: #ff5b5b;
            color: white;
            padding: 10px 25px;
            text-decoration: none;
            font-size: 20px;
            cursor: pointer;
            border: none;
            border-radius: 20px;
            text-transform: uppercase;
            font-family: "Anton", serif;
        }

        .button:hover {
            opacity: 0.9;
        }

        .btn-fermer {
            background-color: #ff5b5b;
            text-decoration: none;
            padding: 10px 25px;
        }

        .btn-fermer:hover {
            background-color: #c9302c;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="content">
        <main>
            <h1 class="header-ajout">Ajouter un Groupe</h1>

            <section class="container-ajout">
                <div class="form-container">
                    {{ form_start(groupeForm, {'attr': {'enctype': 'multipart/form-data'}}) }}

                    <!-- Section Avatar -->
                    <div class="avatar-section">
                        <label for="avatar-upload">
                            <img src="{{ groupeForm.vars.value.avatarGroupe ? asset('uploads/' ~ groupeForm.vars.value.avatarGroupe) : asset('assets/img/profil.png') }}"
                            alt="Avatar" 
                            class="avatar-img" 
                            id="avatarPreview">
                        </label>
                        {{ form_widget(groupeForm.avatarGroupe, { 'attr': {'class': 'hidden-file-input', 'id': 'avatar-upload', 'accept': 'image/*'} }) }}
                    </div>

                    <div class="form-group-row">
                        <div class="form-group">
                            <label>{{ form_label(groupeForm.nomGroupe) }}</label>
                            {{ form_widget(groupeForm.nomGroupe) }}
                        </div>
                        <div class="form-group">
                            <label>{{ form_label(groupeForm.typeGroupe) }}</label>
                            {{ form_widget(groupeForm.typeGroupe) }}
                        </div>
                    </div>

                    <div class="form-group-row">
                        <div class="form-group">
                            <label>{{ form_label(groupeForm.niveauGroupe) }}</label>
                            {{ form_widget(groupeForm.niveauGroupe) }}
                        </div>
                        <div class="form-group">
                            <label>{{ form_label(groupeForm.capaciteGroupe) }}</label>
                            {{ form_widget(groupeForm.capaciteGroupe) }}
                        </div>
                    </div>
                    <div class="form-group-row">
                        <div class="form-group">
                            <label>{{ form_label(groupeForm.descriptionGroupe) }}</label>
                            {{ form_widget(groupeForm.descriptionGroupe) }}
                        </div>
                        <div class="form-group">
                            <label>{{ form_label(groupeForm.prof) }}</label>
                            {{ form_widget(groupeForm.prof) }}
                        </div>
                    </div>
                    

                    <div class="form-group-row">
                        <div class="form-group">
                            <label>{{ form_label(groupeForm.dateDebut) }}</label>
                            {{ form_widget(groupeForm.dateDebut) }}
                        </div>
                        <div class="form-group">
                            <label>{{ form_label(groupeForm.dateFin) }}</label>
                            {{ form_widget(groupeForm.dateFin) }}
                        </div>
                    </div>

                    <div class="form-group-row">
                        <div class="form-group">
                            <label>{{ form_label(groupeForm.heureDebut) }}</label>
                            {{ form_widget(groupeForm.heureDebut) }}
                        </div>
                        <div class="form-group">
                            <label>{{ form_label(groupeForm.heureFin) }}</label>
                            {{ form_widget(groupeForm.heureFin) }}
                        </div>
                    </div>

                    <div class="form-group-row">
                        <div class="form-group">
                            <label>{{ form_label(groupeForm.matieresGroupe) }}</label>
                            {{ form_widget(groupeForm.matieresGroupe) }}
                        </div>
                        <div class="form-group">
                            <label>{{ form_label(groupeForm.salle) }}</label>
                            {{ form_widget(groupeForm.salle) }}
                        </div>
                    </div>
                    
                    <div class="button-container">
                        <a href="{{ path('admin_groupe_index') }}" class="button btn-fermer">Fermer</a>
                        <button type="submit" class="button btn-ajouter">Ajouter</button>
                    </div>
                    
                    {{ form_end(groupeForm) }}
                </div>
            </section>
        </main>
    </div>
{% endblock %}
